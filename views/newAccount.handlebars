<div class="row">
    <div class="col-sm-4">
        <form action="/signup"method="POST">
        {{#each errors}}
        <div class="alert alert-danger">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          {{text}}
        </div>
        {{/each}}
 <div class="form-group">
    <label for="username" class="form-label">Fullname</label>
    <input type="text" name="username" class="form-control" value='{{fullname}}' id="username" required>
  </div>
  <div class="form-group">
    <label for="email" class="form-label">Email address</label>
    <input type="email" class="form-control" id="email"value='{{email}}' name="email" required>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" name="password" class="form-control"value='{{password}}' id="password" required>
  </div>
  <div class="form-group">
    <label for="password">Confirm Password</label>
    <input type="password" name="password2" class="form-control"value='{{password2}}' id="password" required>
  </div>
  <h1><button type="submit" class="btn btn-primary">Signup</button></h1>
</form>
    </div>
</div>